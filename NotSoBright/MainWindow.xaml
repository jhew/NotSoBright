<Window x:Class="NotSoBright.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotSoBright"
        mc:Ignorable="d"
        Title="NotSoBright"
        Width="640"
        Height="480"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True">
    <Grid x:Name="Root" PreviewMouseLeftButtonDown="OnRootMouseLeftButtonDown">
        <Rectangle Fill="Black" Opacity="{Binding OverlayOpacity}" />
        <Popup x:Name="ControlPanelPopup"
               Placement="Relative"
               PlacementTarget="{Binding ElementName=Root}"
               HorizontalOffset="8"
               VerticalOffset="8"
               IsOpen="True"
               StaysOpen="True"
               AllowsTransparency="True">
            <Border x:Name="ControlPanel"
                    Padding="8"
                    Background="#CC1E1E1E"
                    CornerRadius="6">
                <StackPanel Orientation="Horizontal">
                    <Button Content="{Binding ModeLabel}"
                            Command="{Binding ToggleModeCommand}"
                            Padding="8,4"
                            Margin="0,0,6,0" />
                    <Button Content="-"
                            Command="{Binding DecreaseOpacityCommand}"
                            Padding="8,4"
                            Margin="0,0,6,0" />
                    <TextBox x:Name="OpacityTextBox"
                             Text="{Binding OpacityText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Width="40"
                             Margin="0,0,6,0"
                             KeyDown="OnOpacityTextBoxKeyDown"
                             LostFocus="OnOpacityTextBoxLostFocus" />
                    <Button Content="+"
                            Command="{Binding IncreaseOpacityCommand}"
                            Padding="8,4"
                            Margin="0,0,6,0" />
                    <Button Content="X"
                            Command="{Binding CloseCommand}"
                            Padding="8,4" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
